#!/usr/bin/env bash

# Check if a user is provided as an argument
if [ -z "$1" ]; then
  echo "Usage: $0 <username>"
  exit 1
fi

# Store the provided username
USER=$1

# Run the whoami command as the provided user
sudo -u "$USER" whoami

# Stop the apache2 service
pkill -f apache2

# Change the ownership of nginx configuration file
chown nginx:nginx /etc/nginx/nginx.conf

# Change the permissions of nginx configuration file
chmod 700 /etc/nginx/nginx.conf

# Update the nginx default site configuration
sed -i 's/80 default_server/8080 default_server/' /etc/nginx/sites-available/default

# Start the nginx service
sudo -u nginx service nginx start

